<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_route_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_rounded_top_20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/text_view_bottom_sheet_routes_from_to_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_bottom_sheet_routes_from_to_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_bottom_sheet_routes_from_to_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="15dp"
            android:textAppearance="@style/TextSemibold"
            android:textColor="@color/darkNavyBlue"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/image_view_preview"
            app:layout_constraintStart_toEndOf="@id/imageview_back"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/search_result"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/image_view_sort"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/darkNavyBlue" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_sort"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/darkNavyBlue" />

        <View
            android:id="@+id/view_divider_routes_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/paleGrey2"
            app:layout_constraintTop_toBottomOf="@id/text_view_bottom_sheet_routes_from_to_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_search_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_routes_1">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_campus_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:textAppearance="@style/TextSemibold"
                android:textColor="@color/darkNavyBlue"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Kampüsadı - Konumadı" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_departure_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:textAppearance="@style/TextRegular"
                android:textColor="@color/steel"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_campus_name"
                tools:text="07 Nisan, 16:45" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_divider_routes_5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/paleGrey2"
            app:layout_constraintTop_toBottomOf="@id/layout_search_result" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/view_divider_routes_5">

            <LinearLayout
                android:id="@+id/layout_bottom_sheet_routes_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:weightSum="5.3">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/shuttle_name_stops"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/steel"
                    android:textSize="14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/fullness"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/steel"
                    android:textSize="14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:paddingStart="10dp"
                    android:gravity="center"
                    android:text="@string/eta"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/steel"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:id="@+id/view_divider_routes_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/layout_bottom_sheet_routes_titles"
                android:layout_marginTop="10dp"
                android:background="@color/paleGrey2" />

<!--            <androidx.core.widget.NestedScrollView-->
<!--                android:id="@+id/container"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_below="@id/view_divider_routes_2"-->
<!--                android:fillViewport="true"-->
<!--                app:layout_behavior="@string/appbar_scrolling_view_behavior">-->

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/recycler_view_bottom_sheet_routes"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="0dp"-->
<!--                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--                    tools:listitem="@layout/route_detail_list_item"-->

<!--                    />-->
<!--            </androidx.core.widget.NestedScrollView>-->


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_bottom_sheet_routes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relative"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons"
            tools:listitem="@layout/route_detail_list_item" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_stop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/need_stop_location"
                android:textAppearance="@style/TextRegular"
                android:textColor="@color/darkNavyBlue"
                android:textSize="16sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_request_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/select_or_request"
                android:textAppearance="@style/TextRegular"
                android:textColor="@color/darkNavyBlue"
                android:textSize="16sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_nearby_stop"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/request_a_nearby_stop"
                android:visibility="gone"
                app:cornerRadius="10dp"
                tools:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_skip"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/continue_home_screen"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:visibility="gone"
                tools:visibility="gone"
                app:backgroundTint="@color/colorWhite"
                app:cornerRadius="10dp"
                app:rippleColor="@color/colorPrimary"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/cancel_request"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:visibility="gone"
                tools:visibility="visible"
                app:backgroundTint="@color/colorWhite"
                app:cornerRadius="10dp"
                app:rippleColor="@color/colorPrimary"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
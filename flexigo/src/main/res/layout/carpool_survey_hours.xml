<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_edit_shuttle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:textAppearance="@style/TextSemibold"
            android:textSize="24sp"
            android:textColor="@color/darkNavyBlue"
            android:text="@string/prefer_workplace"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextSemibold"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:text="@string/provide_carpoolers"/>


        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_description"
            android:layout_marginTop="17dp"
            android:background="@color/paleGrey2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_arrival_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            android:textColor="@color/darkNavyBlue"
            android:text="@string/arrival_at_work"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_arrival_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_arrival_work">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_arrival_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:textColor="@color/darkNavyBlue"
                android:text="08:30"
                tools:text="08:30"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_arrival_time_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/textview_arrival_time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextRegular"
                android:textSize="16sp"
                android:textColor="@color/steel"
                android:text="  ± 15 min"
                tools:text="  ± 15 min"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_arrival_time_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/textview_arrival_time_desc"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_edit"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_arrival_work"
            android:layout_marginTop="17dp"
            android:background="@color/paleGrey2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_departure_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            android:textColor="@color/darkNavyBlue"
            android:text="@string/departure_from_work"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_departure_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_departure_work">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:textColor="@color/darkNavyBlue"
                tools:text="18:00"
                android:text="18:00"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_departure_time_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/textview_departure_time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextRegular"
                android:textSize="16sp"
                android:textColor="@color/steel"
                tools:text="  ± 15 min"
                android:text="  ± 15 min"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_departure_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textview_departure_time_desc"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_departure_work"
            android:layout_marginTop="17dp"
            android:background="@color/paleGrey2"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_continue"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/Generic_Continue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
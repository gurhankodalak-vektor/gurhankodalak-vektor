                        android:drawableStart="@drawable/ic_no_smoking"
                        android:drawablePadding="5dp"
                        android:text="@string/no_smoking"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_car_rules_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/layout_car_rules_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="35dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:drawableStart="@drawable/ic_no_alcohol"
                        android:drawablePadding="5dp"
                        android:text="@string/no_alcohol"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:drawableStart="@drawable/ic_no_other_driver"
                        android:drawablePadding="5dp"
                        android:text="@string/no_other_driver"/>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_agreement_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons_rent">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/agreement_approve_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@={viewModel.isStartAgreementApproved}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/agreement_approve_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="@string/rental_start_check_box_text"
                android:textColor="@color/colorNavy"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/agreement_approve_checkbox"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/layout_buttons_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:id="@+id/buttons_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/start_personal_rental"
                    style="@style/PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextSemibold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/start_renting"
                    app:backgroundTint="@color/purpley"
                    app:rippleColor="@color/colorWhite"
                    android:onClick="@{viewModel::createRental}"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_section_corporate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/start_corporate_rental"
                    style="@style/PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:minHeight="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="@style/TextSemibold"
                    android:textSize="16sp"
                    android:text="@string/corporate_rent"
                    app:backgroundTint="@color/purpley"
                    app:rippleColor="@color/colorWhite"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/start_personal_rental1"
                    style="@style/SecondaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/individual_rent"
                    android:textAppearance="@style/TextSemibold"
                    android:textSize="16sp"
                    app:strokeColor="@color/purpley"
                    android:textColor="@color/purpley"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/purpley"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
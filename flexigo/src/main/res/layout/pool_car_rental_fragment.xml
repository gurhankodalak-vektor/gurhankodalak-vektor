<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.PoolCarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pool_car_rental_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget"
        android:background="@color/paleGrey">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons_3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_internal_damage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="20dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_time_remaining_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:gravity="center"
                                android:text="@string/time_remaining_for_internal_damage"
                                android:textAppearance="@style/TextRegular"
                                android:textColor="@color/darkNavyBlue"
                                android:textSize="14sp"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card_view_counter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                app:cardBackgroundColor="@color/colorWhite"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text_view_time_remaining_info"
                                app:strokeColor="@color/paleGrey2"
                                app:strokeWidth="1dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/text_view_remaining_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAppearance="@style/TextRegular"
                                    android:textColor="@color/darkNavyBlue"
                                    android:textSize="16sp"
                                    tools:text="3 min. 48 sec." />

                            </com.google.android.material.card.MaterialCardView>

                            <View
                                android:id="@+id/view_divider_damage_1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                app:layout_constraintTop_toBottomOf="@id/card_view_counter"
                                android:layout_marginTop="20dp"
                                android:background="@color/paleGrey2"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_register_see_damages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/view_divider_damage_1"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/text_view_damage_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/view_divider_damage_vertical"
                                    android:textAppearance="@style/TextSemibold"
                                    android:textSize="18sp"
                                    android:textColor="@color/purpley"
                                    tools:text="4"/>

                                <View
                                    android:id="@+id/view_divider_damage_vertical"
                                    android:layout_width="1dp"
                                    android:layout_height="38dp"
                                    app:layout_constraintStart_toEndOf="@id/text_view_damage_count"
                                    app:layout_constraintEnd_toStartOf="@id/text_view_damage_info"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/paleGrey2"
                                    android:layout_marginStart="11dp"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/text_view_damage_info"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/view_divider_damage_vertical"
                                    app:layout_constraintEnd_toStartOf="@id/button_see_damages"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:textAppearance="@style/TextSemibold"
                                    android:textSize="14sp"
                                    android:textColor="@color/darkNavyBlue"
                                    android:text="@string/registered_internal_damage"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_see_damages"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/text_view_damage_info"
                                    android:paddingStart="6dp"
                                    android:paddingEnd="6dp"
                                    android:paddingTop="6dp"
                                    android:paddingBottom="6dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/purpley"
                                    android:textAppearance="@style/TextSemibold"
                                    android:text="@string/see_damages"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    app:icon="@drawable/ic_arrow_start"
                                    app:iconTint="@color/purpley"
                                    app:iconGravity="end"
                                    app:rippleColor="@color/purpley"
                                    android:onClick="@{viewModel.navigator::showInternalDamageControlFragment}"/>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <View
                                android:id="@+id/view_divider_damage_2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                app:layout_constraintTop_toBottomOf="@id/layout_register_see_damages"
                                android:background="@color/paleGrey2"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/layout_total_time_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/layout_internal_damage"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_total_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:src="@drawable/ic_total_distance"
                                    />

                                <TextView
                                    android:id="@+id/text_view_total_distance_info"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toEndOf="@id/image_view_total_distance"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/image_view_total_distance"
                                    app:layout_constraintBottom_toBottomOf="@id/image_view_total_distance"
                                    android:layout_marginStart="6.3dp"
                                    android:textAppearance="@style/TextRegular"
                                    android:textSize="12sp"
                                    android:textColor="@color/steel"
                                    android:text="@string/total_distance"/>

                                <TextView
                                    android:id="@+id/text_view_total_distance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="@id/text_view_total_distance_info"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/text_view_total_distance_info"
                                    android:layout_marginTop="3dp"
                                    android:textAppearance="@style/TextSemibold"
                                    android:textSize="14sp"
                                    android:textColor="@color/darkNavyBlue"
                                    tools:text="77 miles"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_total_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:src="@drawable/ic_clock"
                                    />

                                <TextView
                                    android:id="@+id/text_view_total_time_info"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toEndOf="@id/image_view_total_time"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/image_view_total_time"
                                    app:layout_constraintBottom_toBottomOf="@id/image_view_total_time"
                                    android:layout_marginStart="6.3dp"
                                    android:textAppearance="@style/TextRegular"
                                    android:textSize="12sp"
                                    android:textColor="@color/steel"
                                    android:text="@string/total_time"/>

                                <TextView
                                    android:id="@+id/text_view_total_time"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="@id/text_view_total_time_info"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/text_view_total_time_info"
                                    android:layout_marginTop="3dp"
                                    android:textAppearance="@style/TextSemibold"
                                    android:textSize="14sp"
                                    android:textColor="@color/darkNavyBlue"
                                    tools:text="4 hours 34 minutes"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                        <View
                            android:id="@+id/view_divider_1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintTop_toBottomOf="@id/layout_total_time_distance"
                            android:layout_marginTop="15dp"
                            android:background="@color/paleGrey2"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_total_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/text_view_driving_details"
                            app:layout_constraintTop_toBottomOf="@id/view_divider_1"
                            android:layout_marginTop="17dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textAppearance="@style/TextBold"
                            android:textSize="18sp"
                            android:textColor="@color/darkNavyBlue"
                            tools:text="Total: Â£45"
                            android:visibility="gone"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_driving_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/text_view_total_price"
                            app:layout_constraintTop_toBottomOf="@id/view_divider_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="17dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textAppearance="@style/TextBold"
                            android:textSize="18sp"
                            android:textColor="@color/darkNavyBlue"/>

                        <LinearLayout
                            android:id="@+id/layout_buttons_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/text_view_driving_details"
                            android:layout_marginTop="30dp">

                            <com.google.android.material.button.MaterialButton
                                style="@style/SecondaryButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="10dp"
                                android:textAppearance="@style/TextSemibold"
                                android:textSize="16sp"
                                android:text="@string/call_center"
                                app:icon="@drawable/ic_call_center"
                                app:iconTint="@color/purpley"
                                app:backgroundTint="@color/colorWhite"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/purpley"
                                android:textColor="@color/purpley"
                                app:cornerRadius="5dp"
                                app:rippleColor="@color/purpley"
                                android:minHeight="50dp"
                                android:onClick="@{viewModel.navigator::callCallCenter}"/>

                            <com.google.android.material.button.MaterialButton
                                style="@style/SecondaryButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginEnd="20dp"
                                android:textAppearance="@style/TextSemibold"
                                android:textSize="16sp"
                                android:text="@string/assistance"
                                app:icon="@drawable/ic_assistance"
                                app:iconTint="@color/purpley"
                                app:backgroundTint="@color/colorWhite"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/purpley"
                                android:textColor="@color/purpley"
                                app:cornerRadius="5dp"
                                app:rippleColor="@color/purpley"
                                android:minHeight="50dp"
                                android:onClick="@{viewModel.navigator::showPoolCarAssistanceFragment}"/>

                        </LinearLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_directions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/layout_buttons_1"
                            android:layout_marginTop="26dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textAppearance="@style/TextSemibold"
                            android:textSize="18sp"
                            android:textColor="@color/darkNavyBlue"
                            android:text="@string/directions"/>

                        <LinearLayout
                            android:id="@+id/layout_buttons_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/text_view_directions"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_gas_station"
                                style="@style/PrimaryButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="10dp"
                                android:textAppearance="@style/TextSemibold"
                                android:textSize="16sp"
                                android:text="@string/gas_station"
                                app:backgroundTint="@color/marigold"
                                android:textColor="@color/colorWhite"
                                app:cornerRadius="5dp"
                                app:rippleColor="@color/colorWhite"
                                android:minHeight="50dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_stations"
                                style="@style/SecondaryButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="20dp"
                                android:textAppearance="@style/TextSemibold"
                                android:textSize="16sp"
                                android:text="@string/address"
                                app:backgroundTint="@color/colorWhite"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/marigold"
                                android:textColor="@color/marigold"
                                app:cornerRadius="5dp"
                                app:rippleColor="@color/marigold"
                                android:minHeight="50dp"/>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/colorWhite"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                app:backgroundTint="@color/purpley"
                android:textColor="@color/colorWhite"
                app:cornerRadius="10dp"
                app:rippleColor="@color/colorWhite"
                android:minHeight="50dp"/>

            <com.google.android.material.button.MaterialButton
                style="@style/SecondaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                app:backgroundTint="@color/colorWhite"
                app:strokeWidth="1dp"
                app:strokeColor="@color/purpley"
                android:textColor="@color/purpley"
                app:cornerRadius="10dp"
                app:rippleColor="@color/purpley"
                android:minHeight="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttons_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/colorWhite">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_finish_rental"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:text="@string/rent_finish"
                app:backgroundTint="@color/purpley"
                android:textColor="@color/colorWhite"
                app:cornerRadius="10dp"
                app:rippleColor="@color/colorWhite"
                android:minHeight="50dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
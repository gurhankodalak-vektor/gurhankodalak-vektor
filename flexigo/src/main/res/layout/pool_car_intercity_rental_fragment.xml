<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.intercity.PoolCarIntercityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_submit">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_submit"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:rippleColor="@color/colorWhite"
                app:contentPadding="20dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_license_plate_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/pool_car_intercity_start_text_plate"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"
                        android:gravity="center"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_license_plate_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_license_plate_info"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"
                        android:gravity="center"
                        android:text="@={viewModel.licensePlate}"/>


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_start_km_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_license_plate_value"
                        android:layout_marginTop="15dp"
                        android:text="@string/pool_car_intercity_start_text_start_km"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"
                        android:gravity="center"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_start_km_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_start_km_info"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"
                        android:gravity="center"
                        android:text="@={viewModel.startKm}"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_vehicle_make_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_start_km_value"
                        android:layout_marginTop="15dp"
                        android:text="@string/pool_car_intercity_start_text_make"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"
                        android:gravity="center"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_make_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_vehicle_make_info"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"
                        android:gravity="center"
                        android:text="@={viewModel.vehicleMake}"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:text="@string/pool_car_intercity_finish_button_text"
            app:backgroundTint="@color/purpley"
            app:rippleColor="@color/colorWhite"
            android:onClick="@{viewModel.navigator::showFinishFragment}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.menu.MenuViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_switches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:contentPadding="20dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_sound_effect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        app:trackTint="@color/colorPrimary"
                        android:onCheckedChanged="@{(switch, checked) -> viewModel.onSoundEffectCheckChanged(checked)}"
                        tools:checked="true"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/switch_sound_effect"
                        app:layout_constraintTop_toTopOf="@id/switch_sound_effect"
                        app:layout_constraintBottom_toBottomOf="@id/switch_sound_effect"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/settings_sound_effect"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/switch_sound_effect"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        app:trackTint="@color/colorPrimary"
                        android:onCheckedChanged="@{(switch, checked) -> viewModel.onNotificationsCheckChanged(checked)}"
                        tools:checked="true"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/switch_notifications"
                        app:layout_constraintTop_toTopOf="@id/switch_notifications"
                        app:layout_constraintBottom_toBottomOf="@id/switch_notifications"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/settings_notifications"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_email_notificaitons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/switch_notifications"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        app:trackTint="@color/colorPrimary"
                        android:onCheckedChanged="@{(switch, checked) -> viewModel.onEmailNotificationsCheckChanged(checked)}"
                        tools:checked="true"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/switch_email_notificaitons"
                        app:layout_constraintTop_toTopOf="@id/switch_email_notificaitons"
                        app:layout_constraintBottom_toBottomOf="@id/switch_email_notificaitons"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/settings_email_notifications"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_show_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/switch_email_notificaitons"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        app:trackTint="@color/colorPrimary"
                        android:onCheckedChanged="@{(switch, checked) -> viewModel.onShowPhoneCheckChanged(checked)}"
                        tools:checked="true"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/switch_show_phone"
                        app:layout_constraintTop_toTopOf="@id/switch_show_phone"
                        app:layout_constraintBottom_toBottomOf="@id/switch_show_phone"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/settings_show_phone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_static_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_view_switches"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_privacy_policy"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        app:icon="@drawable/ic_arrow_right_1"
                        app:iconTint="@color/steel"
                        app:iconGravity="end"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextRegular"
                        android:text="@string/privacy_policy"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="@{viewModel.navigator::showPrivacyPolicyPdf}"/>

                    <View
                        android:id="@+id/line_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/button_privacy_policy"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/paleGrey2"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_security"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/line_privacy_policy"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        app:icon="@drawable/ic_arrow_right_1"
                        app:iconTint="@color/steel"
                        app:iconGravity="end"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextRegular"
                        android:text="@string/security"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:visibility="gone"
                        android:onClick="@{viewModel.navigator::showSecurityPdf}"/>

                    <View
                        android:id="@+id/line_security"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/button_security"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/paleGrey2"
                        android:visibility="gone"/>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_flexigo"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/line_security"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        app:icon="@drawable/ic_arrow_right_1"
                        app:iconTint="@color/steel"
                        app:iconGravity="end"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextRegular"
                        android:text="@string/flexigo"
                        android:visibility="gone"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="@{viewModel.navigator::showFlexigoPdf}"/>

                    <View
                        android:id="@+id/line_flexigo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/button_flexigo"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/paleGrey2"
                        android:visibility="gone"/>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_about_application"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/line_flexigo"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        app:icon="@drawable/ic_arrow_right_1"
                        app:iconTint="@color/steel"
                        app:iconGravity="end"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextRegular"
                        android:text="@string/about_application"
                        android:visibility="gone"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="@{viewModel.navigator::showAboutApplicationPdf}"/>

                    <View
                        android:id="@+id/line_about_application"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/button_about_application"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/paleGrey2"
                        android:visibility="gone"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/line_about_application"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:textAppearance="@style/TextRegular"
                        android:text="@string/version"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
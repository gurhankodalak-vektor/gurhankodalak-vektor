<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.PoolCarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pool_car_main_fragment"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:tint="@color/purpley"
            app:rippleColor="@color/purpley"
            android:background="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:src="@drawable/ic_my_location"
            android:visibility="gone"/>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:behavior_hideable="false"
                app:behavior_peekHeight="35dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                android:background="@drawable/bg_white_rounded_top_20dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_bottom_sheet_top"
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="2.5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/steelAlpha50"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_parking_lots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/card_view_bottom_sheet_top"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:textAppearance="@style/TextSemibold"
                    android:textSize="18sp"
                    android:textColor="@color/darkNavyBlue"
                    android:text="@string/parking_lots"/>

                <com.yarolegovich.discretescrollview.DiscreteScrollView
                    android:id="@+id/recycler_view_parking_lots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_parking_lots"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:theme="@style/PoolCarRecyclerView"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="16dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
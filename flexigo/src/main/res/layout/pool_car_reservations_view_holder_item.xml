<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textAppearance="@style/TextMedium"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    tools:text="Approved" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_view_status"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:textColor="@color/darkNavyBlue"
                tools:text="Şehirlerarası Ataç Talebi"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_divider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_title"
            android:layout_marginTop="10dp"
            android:background="@color/paleGrey2"/>

        <LinearLayout
            android:id="@+id/layout_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider_1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_start_date_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextRegular"
                    android:textSize="14sp"
                    android:textColor="@color/steel"
                    android:text="@string/reservation_start_date"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_start_date_info"
                    android:layout_marginTop="1dp"
                    android:textAppearance="@style/TextSemibold"
                    android:textSize="14sp"
                    android:textColor="@color/darkNavyBlue"
                    tools:text="12.11.2019 10:00am - 02:00pm"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_end_date_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextRegular"
                    android:textSize="14sp"
                    android:textColor="@color/steel"
                    android:text="@string/reservation_end_date"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_end_date_info"
                    android:layout_marginTop="1dp"
                    android:textAppearance="@style/TextSemibold"
                    android:textSize="14sp"
                    android:textColor="@color/darkNavyBlue"
                    tools:text="12.11.2019 10:00am - 02:00pm"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_vehicle_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_dates"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:text="@string/pool_car_reservation_vehicle_info"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_vehicle_info"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TextSemibold"
            android:textSize="14sp"
            android:textColor="@color/darkNavyBlue"
            tools:text="Some Description Test"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_from_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_vehicle"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:text="@string/pool_car_reservation_from_info"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_from_info"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TextSemibold"
            android:textSize="14sp"
            android:textColor="@color/darkNavyBlue"
            tools:text="Some Description Test"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_to_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_from"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:text="@string/pool_car_reservation_to_info"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_to_info"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TextSemibold"
            android:textSize="14sp"
            android:textColor="@color/darkNavyBlue"
            tools:text="Some Description Test"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_description_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_to"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:text="@string/description"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_description_info"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TextSemibold"
            android:textSize="14sp"
            android:textColor="@color/darkNavyBlue"
            tools:text="Some Description Test"/>

        <View
            android:id="@+id/view_divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_description"
            android:layout_marginTop="18dp"
            android:background="@color/paleGrey2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextSemibold"
            android:text="@string/start1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="1dp"
            app:rippleColor="@color/colorPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider_2"
            app:layout_constraintStart_toEndOf="@id/button_start"
            android:layout_marginTop="18dp"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="@color/watermelon"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextSemibold"
            android:text="@string/cancel"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/watermelon"
            app:strokeWidth="1dp"
            app:rippleColor="@color/watermelon"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
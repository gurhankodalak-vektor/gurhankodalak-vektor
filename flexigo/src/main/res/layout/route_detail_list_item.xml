<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="20dp">
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_route_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextSemibold"
        android:textColor="@color/darkNavyBlue"
        android:textSize="16sp"
        tools:text="Hat Adı 1"/>

    <LinearLayout
        android:id="@+id/layout_route_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@id/text_view_route_name"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_route_name_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textAppearance="@style/TextRegular"
            android:textColor="@color/steel"
            android:textSize="14sp"
            tools:text="Maslak - İnilecek Durak"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_route_fullness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.8"
            android:textAppearance="@style/TextRegular"
            android:textColor="@color/steel"
            android:textSize="16sp"
            tools:text="7/14"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_route_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:paddingEnd="13dp"
            android:gravity="end"
            android:textAppearance="@style/TextSemibold"
            android:textColor="@color/darkNavyBlue"
            android:textSize="16sp"
            tools:text="38dk" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_back"
            app:tint="@color/steel"
            android:rotation="180"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_route_details_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_route_details"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="8"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_duration_trip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_duration_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_view_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="5dp"
                android:textAppearance="@style/TextSemibold"
                android:textColor="@color/darkNavyBlue"
                android:textSize="12sp"
                tools:text="35dk"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.3">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_walking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_walking"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_duration_walking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_view_walking"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="3dp"
                android:textAppearance="@style/TextSemibold"
                android:textColor="@color/darkNavyBlue"
                android:textSize="12sp"
                tools:text="102min"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <View
        android:id="@+id/divider_end"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/layout_route_details_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:background="@color/paleGrey2"/>




</androidx.constraintlayout.widget.ConstraintLayout>
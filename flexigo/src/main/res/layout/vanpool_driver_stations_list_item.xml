<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_regular_route"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_circle_empty"
            android:gravity="center"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/darkNavyBlue"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_dotted_line_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textview_count"
            app:layout_constraintStart_toStartOf="@+id/textview_count"
            app:layout_constraintTop_toBottomOf="@+id/textview_count" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_station_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/darkNavyBlue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/textview_count"
            app:layout_constraintStart_toEndOf="@id/textview_count"
            app:layout_constraintTop_toTopOf="@+id/textview_count"
            tools:text="StopName1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_station_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextRegular"
            android:textColor="@color/steel"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textview_station_name"
            app:layout_constraintTop_toBottomOf="@+id/textview_station_name"
            tools:text="Lorem Cad.No:44 Levent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_riders_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/textview_station_name"
            app:layout_constraintTop_toBottomOf="@+id/textview_station_address">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_station_riders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextRegular"
                android:textColor="@color/darkNavyBlue"
                android:textSize="14sp"
                tools:text="3 riders" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow"
                app:layout_constraintStart_toEndOf="@+id/textview_station_riders"
                app:layout_constraintTop_toBottomOf="@+id/textview_station_address" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_navigation"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_station_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
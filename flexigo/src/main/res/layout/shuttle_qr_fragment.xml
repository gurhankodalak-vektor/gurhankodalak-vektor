<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.shuttle.ShuttleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_scan_qr_code"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:text="@string/scan_qr_code"
            android:onClick="@{viewModel.navigator::scanQrCode}"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/button_scan_qr_code"
            android:layout_marginBottom="16dp"
            app:switchPadding="10dp"
            android:textColor="@color/darkNavyBlue"
            android:textAppearance="@style/TextRegular"
            android:textSize="14sp"
            app:trackTint="@color/colorPrimary"
            android:text="@string/open_camera_automatically"
            android:onCheckedChanged="@{(switch, checked) -> viewModel.navigator.onQrCodeCheckChanged(checked)}"
            tools:checked="true"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
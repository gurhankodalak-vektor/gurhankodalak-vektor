<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.base.photo.TakePhotoViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey2">

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.otaliastudios.cameraview.CameraView
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"
                app:cameraHdr="off"
                app:cameraExperimental="true"
                app:cameraEngine="camera2"
                app:cameraPlaySounds="true"
                app:cameraGrid="off"
                app:cameraFlash="auto"
                app:cameraAudio="on"
                app:cameraFacing="back"
                app:cameraGestureTap="autoFocus"
                app:cameraGestureLongTap="none"
                app:cameraGesturePinch="zoom"
                app:cameraGestureScrollHorizontal="filterControl1"
                app:cameraGestureScrollVertical="exposureCorrection"
                app:cameraMode="picture"
                app:cameraAutoFocusMarker="com.otaliastudios.cameraview.markers.DefaultAutoFocusMarker" />

        </FrameLayout>

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="22dp"
            app:srcCompat="@drawable/info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/capture_camera" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="22dp"
            android:lineSpacingExtra="1sp"
            tools:text="Ehliyetinizin ön yüzünün net bir fotoğrafını ekleyiniz."
            android:text="@{viewModel.descriptionText}"
            android:textAppearance="@style/TextLight"
            android:textColor="@color/colorNavy"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/info_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/info_icon"/>

        <ImageButton
            android:id="@+id/capture_camera"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="40dp"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_shutter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
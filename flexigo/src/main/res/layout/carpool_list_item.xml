<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/colorWhite">

    <!--CENTER. app:gravity="center" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded_10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_name_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Michael T."
                android:textAppearance="@style/TextSemibold"
                android:textColor="@color/darkNavyBlue"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/textview_time"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Michael T." />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_carpool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/textview_name_surname"
                app:layout_constraintEnd_toStartOf="@+id/textview_time"
                app:layout_constraintTop_toTopOf="@id/textview_name_surname"
                app:srcCompat="@drawable/ic_carpool" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.6 mi, +5 min"
                android:textAppearance="@style/TextMedium"
                android:textColor="@color/steel"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/textview_name_surname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textview_name_surname"
                app:layout_constraintTop_toTopOf="@id/textview_name_surname"
                tools:ignore="SmallSp"
                tools:text="0.6 mi, +5 min" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Marketing"
                android:textAppearance="@style/TextRegular"
                android:textColor="@color/steel"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_name_surname"
                tools:text="Marketing" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="07:30-17:30"
                android:textAppearance="@style/TextMedium"
                android:textColor="@color/steel"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_department"
                tools:text="07:30-17:30" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageview_match"
                app:layout_constraintTop_toBottomOf="@+id/textview_time"
                app:srcCompat="@drawable/ic_close_circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageview_navigation"
                app:layout_constraintTop_toBottomOf="@+id/textview_time"
                app:srcCompat="@drawable/ic_approve_circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageview_call"
                app:layout_constraintTop_toBottomOf="@+id/textview_time"
                app:srcCompat="@drawable/ic_navigation_circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_call_circle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!--RIGHT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingTop="17dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        app:sticky="none"
        app:bring_to_clamp="50dp"
        app:clamp="self"
        app:gravity="right">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/image_button_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:background="@color/colorWhite"
            android:padding="20dp"
            android:src="@drawable/ic_dislike" />

    </LinearLayout>

    <!--LEFT-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingTop="17dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        app:bring_to_clamp="50dp"
        app:sticky="none"
        app:clamp="self"
        app:gravity="left">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/image_button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:background="@color/colorWhite"
            android:padding="20dp"
            android:src="@drawable/ic_like" />

    </FrameLayout>
</ru.rambler.libs.swipe_layout.SwipeLayout>
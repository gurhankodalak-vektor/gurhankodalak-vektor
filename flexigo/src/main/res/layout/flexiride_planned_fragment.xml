<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.flexiride.FlexirideViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            app:tint="@color/colorPrimary"
            app:rippleColor="@color/colorPrimary"
            android:background="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:src="@drawable/ic_my_location"
            android:visibility="gone"/>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded_top_20dp"
                app:behavior_hideable="true"
                app:behavior_peekHeight="35dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_bottom_sheet_top"
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/steelAlpha50"
                    app:cardCornerRadius="2.5dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_flexiride_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/card_view_bottom_sheet_top">


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_taxi_min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/image_view_taxi_from_icon"
                        app:layout_constraintBottom_toBottomOf="@id/image_view_taxi_to_icon"
                        app:layout_constraintWidth_percent="0.15"
                        android:layout_marginStart="30dp"
                        android:textAppearance="@style/TextMedium"
                        android:textSize="12sp"
                        android:textColor="@color/darkNavyBlue"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="@id/image_view_taxi_from_icon"
                        app:layout_constraintEnd_toEndOf="@id/image_view_taxi_from_icon"
                        app:layout_constraintTop_toBottomOf="@id/image_view_taxi_from_icon"
                        app:layout_constraintBottom_toTopOf="@id/image_view_taxi_to_icon"
                        android:background="@color/darkNavyBlue"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_view_taxi_from_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toEndOf="@id/text_view_taxi_min"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.05"
                        app:layout_constraintDimensionRatio="W,1:1"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_pick_up"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_taxi_from_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_view_taxi_from_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/image_view_taxi_from_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="30dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_taxi_from_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/text_view_taxi_from_address"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_taxi_from_address"
                        android:layout_marginEnd="30dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="12sp"
                        android:textColor="@color/steel"
                        android:text="11:11 pm"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_view_taxi_to_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toEndOf="@id/text_view_taxi_min"
                        app:layout_constraintTop_toBottomOf="@id/text_view_taxi_from_time"
                        app:layout_constraintWidth_percent="0.05"
                        app:layout_constraintDimensionRatio="W,1:1"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_pick_up"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_taxi_to_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_view_taxi_to_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/image_view_taxi_to_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="30dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="Walk from: to address"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_taxi_to_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/text_view_taxi_to_address"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_taxi_to_address"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="30dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="12sp"
                        android:textColor="@color/steel"
                        android:text="22:22 pm"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vektortelekom.android.vservice.ui.login.LoginActivity"
        android:background="@color/paleGrey">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorWhite">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line_toolbar"
                android:textAppearance="@style/TextSemibold"
                android:textSize="20sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@string/forgot_password"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/darkNavyBlue"
                app:rippleColor="@color/colorPrimary"
                android:background="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:maxImageSize="32dp"
                android:src="@drawable/ic_close"
                android:onClick="@{viewModel.navigator::showLoginFragment}"/>

            <View
                android:id="@+id/line_toolbar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/paleGrey2"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="40dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_forgot_password_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/forgot_password_info"
                    android:textColor="@color/steel"
                    android:textAppearance="@style/TextRegular"
                    android:textSize="14sp"/>

                <View
                    android:id="@+id/line_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/text_view_forgot_password_info"
                    android:layout_marginTop="20dp"
                    android:background="@color/paleGrey2"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_email"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/line_forgot_password"
                    android:layout_marginTop="20dp"
                    android:hint="@string/e_mail">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_email"
                        style="@style/TextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.forgotPasswordEmail}"
                        android:inputType="textEmailAddress"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_view_change_password"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/button_forgot_password"
            android:onClick="@{viewModel::forgotPassword}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
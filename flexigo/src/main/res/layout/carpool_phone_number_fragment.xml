<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/mainBackgroundColor">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/phone_number"
            android:layout_marginTop="40dp"
            android:textSize="24sp"
            android:textAppearance="@style/TextSemibold"
            android:textColor="@color/darkNavyBlue"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_welcome_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_title"
            android:text="@string/add_your_phone"
            android:textSize="16sp"
            android:textAppearance="@style/TextRegular"
            android:textColor="@color/steel"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textSize="12sp"
            android:textColor="@color/steel"
            android:textAppearance="@style/TextMedium"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_hint"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_phone_number">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_phone_code"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/filled_exposed_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="+1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edittext_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="4534"
                android:letterSpacing="0.3"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:inputType="number"
                android:layout_marginStart="10dp"
                android:padding="12dp"
                android:textAppearance="@style/TextMedium"
                android:textColor="@color/darkNavyBlue"
                android:background="@drawable/background_edittext"
                app:layout_constraintStart_toEndOf="@+id/layout_phone_code"
                app:layout_constraintTop_toBottomOf="@+id/textview_phone_number"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:text="@string/submit"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
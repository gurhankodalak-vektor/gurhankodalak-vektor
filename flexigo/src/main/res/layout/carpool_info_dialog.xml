<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carpool_matching"
        android:textSize="16sp"
        android:textAppearance="@style/TextSemibold"
        android:textColor="@color/darkNavyBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textview_title"
        android:text="@string/view_riders"
        android:textSize="16sp"
        android:textAppearance="@style/TextRegular"
        android:textColor="@color/darkNavyBlue"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_like_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/textview_description">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_unlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dislike_circle"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_line_arrow_left"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/ic_line_arrow_right"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_like_circle"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layout_like_menu"
        android:text="@string/view_riders_desc"
        android:textSize="16sp"
        android:textAppearance="@style/TextRegular"
        android:textColor="@color/darkNavyBlue"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_ok"
        style="@style/PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_description2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/got_it_lowercase"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


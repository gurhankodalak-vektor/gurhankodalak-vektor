<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="20dp"
    app:cardBackgroundColor="@color/colorWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_calendar_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_from"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_calendar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image_view_calendar_item"
            app:layout_constraintTop_toTopOf="@id/image_view_calendar_item"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextMedium"
            android:textSize="14sp"
            android:textColor="@color/darkNavyBlue"
            tools:text="Garanti BBVA  IT Team Meeting"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_calendar_title"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/paleGrey"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/colorWhite">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_date_calendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="3dp"
                    android:layout_margin="5dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_date_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextSemibold"
                            android:textSize="10sp"
                            android:textColor="@color/marigold"
                            tools:ignore="SmallSp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_date_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextSemibold"
                            android:textSize="16sp"
                            android:textColor="@color/darkNavyBlue"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_date_full_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/card_view_date_calendar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="@style/TextSemibold"
                    android:textSize="14sp"
                    android:textColor="@color/darkNavyBlue"/>



            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_address_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_view_date"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:text="@string/address"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_address_info"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextMedium"
            android:textSize="14sp"
            android:textColor="@color/darkNavyBlue"
            tools:text="St. James Park 148b Birmingham England"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit_pool_car"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_address"
            android:layout_marginTop="32dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="10dp"
            android:text="@string/request_pool_car"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit_flexiride"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/button_submit_pool_car"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="10dp"
            android:text="@string/request_flexiride"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
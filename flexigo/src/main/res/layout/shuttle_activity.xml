<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.shuttle.ShuttleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vektortelekom.android.vservice.ui.shuttle.ShuttleActivity">

        <!-- Tool Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorWhite"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/image_view_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                android:backgroundTint="@color/colorWhite"
                android:src="@drawable/ic_back"
                android:onClick="@{viewModel.navigator::backPressed}"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_view_profile"
                app:layout_constraintEnd_toStartOf="@id/button_route_filter"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextSemibold"
                android:textSize="20sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@string/shuttle_route"
                android:layout_margin="6dp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_route_filter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                android:padding="8dp"
                android:src="@drawable/ic_filter"
                android:backgroundTint="@color/colorWhite"
                android:visibility="invisible"
                android:onClick="@{viewModel.navigator::showRouteFilter}"/>

           <!-- <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_dot_menu"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                android:padding="8dp"
                android:src="@drawable/ic_dot_menu"
                android:backgroundTint="@color/colorWhite"
                android:onClick="@{viewModel.navigator::showMenuActivity}"
                android:visibility="invisible"/>-->

           <!-- <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_toolbar_notification_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/button_dot_menu"
                app:layout_constraintTop_toTopOf="@id/button_dot_menu"
                android:textAppearance="@style/TextSemibold"
                android:textSize="10sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_watermelon_rounded_8dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                tools:ignore="SmallSp" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- end of Tool Bar -->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite"
            app:itemIconSize="20dp"
            app:itemIconTint="@drawable/bottom_navigation_colors"
            app:itemTextColor="@drawable/bottom_navigation_colors"
            app:itemTextAppearanceActive="@style/BottomNavigationTextAppearanceActive"
            app:itemTextAppearanceInactive="@style/BottomNavigationTextAppearanceInactive"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/shuttle_bottom_navigation_menu" />

        <View
            android:id="@+id/view_background_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000"
            android:visibility="@{viewModel.viewBackgroundBottomSheetVisibility}" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_sheet_edit_shuttle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:behavior_hideable="true"
                app:behavior_peekHeight="0dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                android:background="@drawable/bg_white_rounded_top_20dp"
                >
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_bottom_sheet_edit_shuttle_top"
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="2.5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/steelAlpha50"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/bottom_root_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/card_view_bottom_sheet_edit_shuttle_top"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/number_picker"
                android:background="@color/paleGrey3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_cancel"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textColor="@color/watermelon"
                    android:textAppearance="@style/TextRegular"
                    android:text="@string/cancel"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_select"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextRegular"
                    android:text="@string/select"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_select_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/darkNavyBlue"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:descendantFocusability="blocksDescendants"
                android:background="@color/paleGrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.registration.RegistrationViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/mainBackgroundColor">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/email_code"
            android:layout_marginTop="40dp"
            android:textSize="24sp"
            android:textAppearance="@style/TextSemibold"
            android:textColor="@color/darkNavyBlue"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/text_welcome_title"
            app:layout_constraintBottom_toBottomOf="@+id/text_welcome_title"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_email"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_welcome_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_title"
            android:text="@string/enter_verification_code"
            android:textSize="16sp"
            android:textAppearance="@style/TextRegular"
            android:textColor="@color/steel"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/darkNavyBlue"
            android:textAppearance="@style/TextSemibold"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_hint"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:text="@{viewModel.userEmail}"
            tools:text="name@company.com"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_mail_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@null"
            android:textColor="@color/darkNavyBlue"
            android:textAppearance="@style/TextRegular"
            app:layout_constraintTop_toBottomOf="@id/textview_mail"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="20dp"
            android:text="@string/wrong_email"
            />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="4534"
            android:letterSpacing="0.3"
            android:textAlignment="center"
            android:textSize="18sp"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/darkNavyBlue"
            android:background="@drawable/background_edittext"
            app:layout_constraintTop_toBottomOf="@+id/button_mail_again"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edittext_code"
            android:layout_marginTop="30dp"
            android:text="@string/submit"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:textAppearance="@style/TextMedium"
            app:layout_constraintTop_toBottomOf="@id/button_submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:paddingBottom="10dp"
            android:text="@string/didnt_receive_code"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_send_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:textAppearance="@style/TextMedium"
            app:layout_constraintTop_toBottomOf="@id/textview_warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="10dp"
            android:text="@string/send_again"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</layout>
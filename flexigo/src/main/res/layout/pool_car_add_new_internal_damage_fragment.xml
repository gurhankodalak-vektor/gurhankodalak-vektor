<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.PoolCarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_remaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_time_remaining_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="@string/time_remaining_to_start"
                        android:textAppearance="@style/TextRegular"
                        android:textColor="@color/darkNavyBlue"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_time_remaining_info"
                        app:strokeColor="@color/paleGrey2"
                        app:strokeWidth="1dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_remaining_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:textAppearance="@style/TextRegular"
                            android:textColor="@color/darkNavyBlue"
                            android:textSize="16sp"
                            tools:text="3 min. 48 sec." />

                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:id="@+id/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/paleGrey"
                        app:layout_constraintTop_toBottomOf="@id/card_view_counter" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_add_new_damage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/view_divider"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textAppearance="@style/TextSemibold"
                        android:textSize="18sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/add_new_damage"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_add_new_damage_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_add_new_damage"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/steel"
                        android:text="@string/add_new_damage_info"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_add_damage_front"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_add_new_damage_info"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="50dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/purpley"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="17dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:rippleColor="@color/purpley">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_view_front"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_plus"
                            android:layout_margin="8dp"
                            android:tint="@color/purpley"/>

                    </com.google.android.material.card.MaterialCardView>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_view_car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/card_view_add_damage_front"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_car_damage"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_add_damage_rear"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        app:layout_constraintTop_toBottomOf="@id/image_view_car"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/purpley"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="17dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:rippleColor="@color/purpley">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_view_rear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_plus"
                            android:layout_margin="8dp"
                            android:tint="@color/purpley"/>

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_add_damage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/card_view_add_damage_rear"
                        android:visibility="gone">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_report_internal_damage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="40dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textAppearance="@style/TextSemibold"
                            android:textSize="18sp"
                            android:textColor="@color/darkNavyBlue"
                            android:text="@string/report_front_external_damage"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_report_internal_damage_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/text_view_report_internal_damage"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textAppearance="@style/TextRegular"
                            android:textSize="14sp"
                            android:textColor="@color/steel"
                            android:text="@string/report_front_external_damage_info"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_photos"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_report_internal_damage_info"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/recycler_view_photos"
                            android:layout_marginTop="40dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textAppearance="@style/TextRegular"
                            android:textSize="14sp"
                            android:textColor="@color/darkNavyBlue"
                            android:text="@string/description"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/text_view_description"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:hint="@string/please_write_description"
                            android:minLines="3"
                            android:maxLines="3"
                            android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.core.widget.NestedScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorWhite">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_send_damage"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:text="@string/send_damage_information"
                app:backgroundTint="@color/purpley"
                app:rippleColor="@color/colorWhite"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
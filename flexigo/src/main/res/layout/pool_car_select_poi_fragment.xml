<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.reservation.PoolCarReservationViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:iconifiedByDefault="false"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_parking_lots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/search_view"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/steel"
                android:textSize="12sp"
                android:text="OTOPARKLAR"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_parking_lots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/text_view_parking_lots"
                tools:itemCount="3"
                tools:listitem="@layout/pool_car_select_poi_view_holder_item" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_airport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_parking_lots"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/steel"
                android:textSize="12sp"
                android:text="HAVALÄ°MANLARI"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_airports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/text_view_airport"
                tools:itemCount="3"
                tools:listitem="@layout/pool_car_select_poi_view_holder_item" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>

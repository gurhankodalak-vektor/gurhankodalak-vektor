<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.shuttle.ShuttleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_edit_shuttle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded_top_20dp"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="17dp"
            android:textAppearance="@style/TextSemibold"
            android:textSize="18sp"
            android:textColor="@color/darkNavyBlue"
            android:text="@{viewModel.textViewBottomSheetEditShuttleRouteName}"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_bottom_sheet_edit_shuttle_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_bottom_sheet_edit_shuttle_route_name"
            android:layout_marginTop="20dp"
            app:switchPadding="10dp"
            android:textColor="@color/darkNavyBlue"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            app:trackTint="@color/colorPrimary"
            android:text="@string/wont_use_shuttle"
            android:visibility="@{viewModel.isShuttleServicePlaningFragment ? View.GONE : View.VISIBLE}"
            android:checked="@{viewModel.switchBottomSheetEditShuttleUse}"/>

        <View
            android:id="@+id/view_divider_bottom_sheet_edit_shuttle_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/switch_bottom_sheet_edit_shuttle_use"
            android:layout_marginTop="15dp"
            android:background="@color/paleGrey2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_time_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider_bottom_sheet_edit_shuttle_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_bottom_sheet_edit_shuttle_route_time"
            android:layout_marginTop="18dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            android:textColor="@color/darkNavyBlue"
            android:text="@string/departure_time_2"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bottom_sheet_edit_shuttle_route_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_bottom_sheet_edit_shuttle_route_time_info">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@{viewModel.textViewBottomSheetEditShuttleRouteTime}"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/text_view_bottom_sheet_edit_shuttle_route_time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_edit"
                android:layout_marginStart="5dp"
                android:visibility="@{viewModel.isShuttleTimeMultiple ? View.VISIBLE : View.GONE}"
                android:layout_gravity="center_vertical"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_divider_bottom_sheet_edit_shuttle_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_bottom_sheet_edit_shuttle_route_time"
            android:layout_marginTop="17dp"
            android:background="@color/paleGrey2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_from_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider_bottom_sheet_edit_shuttle_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_bottom_sheet_edit_shuttle_route_from"
            android:layout_marginTop="18dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            android:textColor="@color/darkNavyBlue"
            android:text="@string/from_capital_first_letter"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bottom_sheet_edit_shuttle_route_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_bottom_sheet_edit_shuttle_route_from_info">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@{viewModel.textViewBottomSheetEditShuttleRouteFrom}"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_bottom_sheet_edit_shuttle_route_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/text_view_bottom_sheet_edit_shuttle_route_from"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_edit"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view_divider_bottom_sheet_edit_shuttle_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_bottom_sheet_edit_shuttle_route_from"
            android:layout_marginTop="17dp"
            android:background="@color/paleGrey2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_to_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider_bottom_sheet_edit_shuttle_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_bottom_sheet_edit_shuttle_route_to"
            android:layout_marginTop="18dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            android:textColor="@color/darkNavyBlue"
            android:text="@string/to_capital_first_letter"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bottom_sheet_edit_shuttle_route_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_bottom_sheet_edit_shuttle_route_to_info">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@{viewModel.textViewBottomSheetEditShuttleRouteTo}"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_bottom_sheet_edit_shuttle_route_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_view_bottom_sheet_edit_shuttle_route_to"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_divider_bottom_sheet_edit_shuttle_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_bottom_sheet_edit_shuttle_route_to"
            android:layout_marginTop="17dp"
            android:background="@color/paleGrey2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_search_info2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider_bottom_sheet_edit_shuttle_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_bottom_sheet_edit_shuttle_route_search"
            android:layout_marginTop="18dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            android:textColor="@color/darkNavyBlue"
            android:visibility="@{viewModel.isShuttleServicePlaningFragment ? View.GONE : View.VISIBLE}"
            android:text="@string/or_search_shuttle_name"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_search_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_bottom_sheet_edit_shuttle_route_search_info2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_bottom_sheet_edit_shuttle_route_search"
            android:layout_marginTop="18dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            android:textColor="@color/darkNavyBlue"
            android:visibility="@{viewModel.isShuttleServicePlaningFragment ? View.GONE : View.VISIBLE}"
            android:text="@string/shuttle_name"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bottom_sheet_edit_shuttle_route_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="@{viewModel.isShuttleServicePlaningFragment ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toTopOf="@id/text_view_bottom_sheet_edit_shuttle_route_search_info">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_bottom_sheet_edit_shuttle_route_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextRegular"
                android:textSize="16sp"
                android:textColor="@color/steel"
                android:hint="@string/search_shuttle"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/text_view_bottom_sheet_edit_shuttle_route_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_bottom_sheet_edit_shuttle_route_submit"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_bottom_sheet_edit_shuttle_route_search"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:text="@string/Generic_Continue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
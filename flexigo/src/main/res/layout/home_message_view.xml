<?xml version="1.0" encoding="utf-8"?>
<layout>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dashboard_notification_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motion_layout_message_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutDescription="@xml/motion_scene_root_message_image">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_view_message_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_view_message"
                android:src="@drawable/ic_profile_2"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_view_message_icon"
                app:layout_constraintEnd_toStartOf="@id/image_view_message_expand"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="14sp"
                android:textAppearance="@style/TextRegular"
                android:textColor="@color/darkNavyBlue"
                tools:text="Your service will be delayed by 15 minutes due to a traffic accident"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_message_expand"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_view_message"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_expand"/>

        </androidx.constraintlayout.motion.widget.MotionLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
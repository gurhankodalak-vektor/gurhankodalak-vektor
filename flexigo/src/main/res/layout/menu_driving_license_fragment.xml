<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.menu.MenuViewModel" />
    </data>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">

                android:id="@+id/card_view_user_info"
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:contentPadding="20dp"
                app:rippleColor="@color/colorPrimary"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_view_driving_license_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driving_license_details"
                        android:textColor="@color/darkNavyBlue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_view_driving_license_number_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/driving_license_no"
                        android:textColor="@color/darkNavyBlue"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_info" />

                    <EditText
                        android:id="@+id/text_view_driving_license_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_underline"
                        android:paddingBottom="1dp"
                        android:text="@={viewModel.drivingLicenseNumber}"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_number_info"
                        tools:text="24-08-2020" />

                    <TextView
                        android:id="@+id/text_view_driving_license_expire_date_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/driving_license_expiration_date"
                        android:textColor="@color/darkNavyBlue"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_number" />

                    <TextView
                        android:id="@+id/text_view_driving_license_expire_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_underline"
                        android:onClick="@{viewModel.navigator::showDatePickerDialog}"
                        android:paddingBottom="1dp"
                        android:text="@={viewModel.drivingLicenceValidityDate}"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_expire_date_info"
                        tools:text="24-08-2020" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_driving_license_expire_date"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_driving_license_expire_date"
                        app:tint="@color/paleGrey2" />

                    <TextView
                        android:id="@+id/text_view_driving_license_given_date_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/driving_license_give_date"
                        android:textColor="@color/darkNavyBlue"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_expire_date" />

                    <TextView
                        android:id="@+id/text_view_driving_license_given_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_underline"
                        android:onClick="@{viewModel.navigator::showDatePickerDialog}"
                        android:paddingBottom="1dp"
                        android:text="@={viewModel.drivingLicenceGivenDate}"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_given_date_info"
                        tools:text="24-08-2020" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/paleGrey2"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_driving_license_given_date"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_driving_license_given_date" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_driver_license_front"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_main_background_rounded_8dp"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_given_date">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driving_license_front_photo"
                            android:textColor="@color/darkNavyBlue"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_add_front"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/colorWhite"
                                app:cardCornerRadius="4dp">

                                <ImageView
                                    android:layout_width="78dp"
                                    android:layout_height="44dp"
                                    android:background="@color/colorWhite"
                                    android:padding="4dp"
                                    android:src="@drawable/plus" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_show_front"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:visibility="gone"
                                app:cardBackgroundColor="@color/colorWhite"
                                app:cardCornerRadius="4dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="78dp"
                                    android:layout_height="44dp">

                                    <ImageView
                                        android:id="@+id/image_view_driver_front"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorWhite"
                                        android:scaleType="centerCrop" />

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/delete_front_photo"
                                        style="@style/Widget.MaterialComponents.FloatingActionButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="0dp"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="0dp"
                                        android:background="@color/colorBlack"
                                        android:backgroundTint="@color/colorBlack"
                                        app:borderWidth="0dp"
                                        app:fabCustomSize="20dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:maxImageSize="14dp"
                                        app:rippleColor="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_close"
                                        app:tint="@color/colorWhite" />

                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_driver_license_rear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_main_background_rounded_8dp"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@id/layout_driver_license_front">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driving_license_rear_photo"
                            android:textColor="@color/darkNavyBlue"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_add_rear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/colorWhite"
                                app:cardCornerRadius="4dp">

                                <ImageView
                                    android:layout_width="78dp"
                                    android:layout_height="44dp"
                                    android:background="@color/colorWhite"
                                    android:padding="4dp"
                                    android:src="@drawable/plus" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_show_rear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:visibility="gone"
                                app:cardBackgroundColor="@color/colorWhite"
                                app:cardCornerRadius="4dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="78dp"
                                    android:layout_height="44dp">

                                    <ImageView
                                        android:id="@+id/image_view_driver_rear"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorWhite"
                                        android:scaleType="centerCrop" />

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/delete_rear_photo"
                                        style="@style/Widget.MaterialComponents.FloatingActionButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="0dp"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="0dp"
                                        android:background="@color/colorBlack"
                                        android:backgroundTint="@color/colorBlack"
                                        app:borderWidth="0dp"
                                        app:fabCustomSize="20dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:maxImageSize="14dp"
                                        app:rippleColor="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_close"
                                        app:tint="@color/colorWhite" />

                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/layout_driver_license_rear"
                        style="@style/PrimaryButton"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="6dp"
                        app:cornerRadius="4dp"
                        android:textSize="14sp"
                        android:onClick="@{viewModel::uploadDriverLicense}"
                        android:text="@string/driving_license_edit" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
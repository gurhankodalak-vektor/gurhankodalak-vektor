<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.comments.CommentsViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_submit"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:rippleColor="@color/colorWhite"
            app:cardElevation="0dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_comment_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/category"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_select_demand"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_comment_add"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        app:icon="@drawable/ic_expand"
                        app:iconTint="@color/steel"
                        app:iconGravity="end"
                        android:textSize="14sp"
                        android:textColor="@color/steel"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextRegular"
                        android:text="@string/select"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/paleGrey2"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/button_select_demand"
                        android:layout_marginTop="15dp"
                        android:text="@string/please_indicate_the_date"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextRegular"
                        android:textColor="@color/steel"/>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_demand_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_warning"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/paleGrey"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:rippleColor="@color/colorWhite">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_date"
                            android:background="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_date_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textSize="14sp"
                                android:textAppearance="@style/TextSemibold"
                                android:textColor="@color/darkNavyBlue"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/text_view_date_full_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toStartOf="@id/text_view_date_time"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/background_edittext_grey"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                tools:text="25.11.2022"
                                android:textAppearance="@style/TextMedium"
                                android:textSize="16sp"
                                android:textColor="@color/darkNavyBlue"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/text_view_date_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edittext_grey"
                                tools:text="15:22"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:textAppearance="@style/TextMedium"
                                android:textSize="16sp"
                                android:textColor="@color/darkNavyBlue"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/card_view_demand_date"
                        android:layout_marginTop="15dp"
                        android:text="@string/location"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_select_location"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_location"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        app:icon="@drawable/ic_expand"
                        app:iconTint="@color/steel"
                        app:iconGravity="end"
                        android:textSize="14sp"
                        android:textColor="@color/steel"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextRegular"
                        android:text="@string/select"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/paleGrey2"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/button_select_location"
                        android:layout_marginTop="15dp"
                        android:text="@string/route"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_select_route"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_route"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        app:icon="@drawable/ic_expand"
                        app:iconTint="@color/steel"
                        app:iconGravity="end"
                        android:textSize="14sp"
                        android:textColor="@color/steel"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextRegular"
                        android:text="@string/select"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/paleGrey2"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/button_select_route"
                        android:layout_marginTop="15dp"
                        android:text="@string/description"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_description"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:hint="@string/please_share_feedback"
                        android:minLines="3"
                        android:maxLines="3"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextMedium"
                        android:textColor="@color/steel"
                        android:text="@={viewModel.description}"
                        android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_add_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/edit_text_description"
                        android:layout_marginTop="15dp"
                        android:text="@string/upload_photo"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_photos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_add_photo"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">


                    </androidx.recyclerview.widget.RecyclerView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:text="@string/submit"
            android:onClick="@{viewModel::submitComment}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/number_picker"
                android:background="@color/paleGrey3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_cancel"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textColor="@color/watermelon"
                    android:textAppearance="@style/TextRegular"
                    android:text="@string/cancel"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_select"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextRegular"
                    android:text="@string/select"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_select_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/darkNavyBlue"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:descendantFocusability="blocksDescendants"
                android:background="@color/paleGrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.intercity.PoolCarIntercityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_submit">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_submit"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:rippleColor="@color/colorWhite"
                app:contentPadding="20dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_start_km_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp"
                        android:text="@string/pool_car_intercity_end_text_end_km"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_start_km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_start_km_info"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="@string/hint_km"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"
                        android:text="@={viewModel.finishKm}"
                        android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"/>


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_photo_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/card_view_add_photo"
                        app:layout_constraintBottom_toBottomOf="@id/card_view_add_photo"
                        app:layout_constraintEnd_toStartOf="@id/card_view_add_photo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/hint_pool_car_intercity_photo"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_add_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edit_text_start_km"
                        android:layout_marginTop="15dp"
                        app:layout_constraintDimensionRatio="H,1:1"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:strokeColor="@color/paleGrey2"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/paleGrey2"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_add_photo"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextRegular"
                                android:textSize="12sp"
                                android:textColor="@color/steel"
                                android:text="@string/add_photo"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_taken_photo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="@id/card_view_add_photo"
                        app:layout_constraintEnd_toEndOf="@id/card_view_add_photo"
                        app:layout_constraintTop_toTopOf="@id/card_view_add_photo"
                        app:layout_constraintBottom_toBottomOf="@id/card_view_add_photo"
                        app:layout_constraintDimensionRatio="H,1:1"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:strokeColor="@color/paleGrey2"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/paleGrey2"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_view_taken_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:text="@string/Generic_Continue_2"
            app:backgroundTint="@color/purpley"
            app:rippleColor="@color/colorWhite"
            android:onClick="@{viewModel::finishRental}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.shuttle.ShuttleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        >

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_bottom_sheet_routes_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_view_bottom_sheet_routes_title"
                    app:layout_constraintBottom_toBottomOf="@id/text_view_bottom_sheet_routes_title"
                    android:layout_marginStart="20dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_bottom_sheet_routes_title"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    app:layout_constraintStart_toEndOf="@id/image_view_bottom_sheet_routes_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/image_view_list"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="@style/TextSemibold"
                    android:textSize="18sp"
                    android:textColor="@color/darkNavyBlue"
                    tools:text="Maslak Ofis - Kadıköy"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_bottom_sheet_routes_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/image_view_bottom_sheet_routes_back"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_bottom_sheet_routes_title"
                    app:layout_constraintEnd_toStartOf="@id/image_view_list"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="@style/TextRegular"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="@color/steel"
                    tools:text="Çıkış Saati:"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_list"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/darkNavyBlue"
                    app:layout_constraintTop_toTopOf="@id/image_view_sort"
                    app:layout_constraintBottom_toBottomOf="@id/image_view_sort"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/image_view_sort" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sort"
                    app:tint="@color/darkNavyBlue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            tools:itemCount="1"
            tools:listitem="@layout/route_preview_list_item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yolcu Ekle"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3dp"/>

            <LinearLayout
                android:id="@+id/layout_registration_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/text_view_title"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_registration_number"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/registration_number"
                    android:layout_marginStart="3dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_registration_number"
                        style="@style/TextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:imeOptions="actionDone"/>


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_registration_number"
                    style="@style/PrimaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Ara"
                    app:cornerRadius="4dp"
                    app:backgroundTint="@color/purpley"
                    app:rippleColor="@color/colorWhite"/>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_search_result_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/paleGrey"
                android:text="Arama Sonucu"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/layout_registration_number"/>


            <LinearLayout
                android:id="@+id/layout_found_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/text_view_search_result_info">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/button_found_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextMedium"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/button_add_user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/bg_grey_circular"
                    app:tint="@color/colorWhite"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:src="@drawable/ic_plus"/>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_list_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/paleGrey"
                android:text="Eklenenler"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/layout_found_user"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_person_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_list_info"
                android:layout_marginTop="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_submit"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="4dp"
                app:cornerRadius="4dp"
                app:backgroundTint="@color/purpley"
                app:rippleColor="@color/colorWhite"
                android:text="Kaydet"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_person_list"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.core.widget.NestedScrollView>
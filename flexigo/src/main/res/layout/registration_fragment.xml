<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.registration.RegistrationViewModel" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.vektortelekom.android.vservice.ui.login.LoginActivity"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:background="@color/mainBackgroundColor">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_flexigo_logo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_welcome_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageview_logo"
            android:text="@string/hello"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textAppearance="@style/TextSemibold"
            android:textColor="@color/darkNavyBlue"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_welcome_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_title"
            android:text="@string/signup_text"
            android:textSize="16sp"
            android:textAppearance="@style/TextRegular"
            android:textColor="@color/steel"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_hint"
            android:layout_marginTop="20dp"
            android:text="@string/name"
            android:textSize="12sp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"
            android:background="@drawable/background_edittext"
            app:layout_constraintTop_toBottomOf="@+id/textview_name"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edittext_name"
            android:layout_marginTop="20dp"
            android:text="@string/surname"
            android:textSize="12sp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"
            android:background="@drawable/background_edittext"
            app:layout_constraintTop_toBottomOf="@+id/textview_surname"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edittext_surname"
            android:layout_marginTop="20dp"
            android:text="@string/e_mail"
            android:textSize="12sp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"
            android:background="@drawable/background_edittext"
            app:layout_constraintTop_toBottomOf="@+id/textview_mail"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edittext_mail"
            android:layout_marginTop="20dp"
            android:text="@string/password"
            android:textSize="12sp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_password"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/textview_password">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/steel"
                android:inputType="textPassword"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toTopOf="@+id/relative"
            android:background="@drawable/ic_triangle_top"
            app:layout_constraintTop_toBottomOf="@+id/text_input_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_warning"
            android:background="@drawable/ic_triangle_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_message_box_triangle"
            app:layout_constraintTop_toBottomOf="@+id/text_input_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/password_must_include"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                android:textAppearance="@style/TextRegular"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_title"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_check_icon_grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_warning1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/imageview_1"
                app:layout_constraintTop_toBottomOf="@+id/textview_title"
                android:text="@string/least_character"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                android:textAppearance="@style/TextRegular"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_warning1"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_check_icon_green" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_warning2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_warning1"
                app:layout_constraintStart_toEndOf="@+id/imageview_2"
                android:text="@string/least_character_capital"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                android:textAppearance="@style/TextRegular"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_warning2"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_check_icon_green" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_warning3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_warning2"
                app:layout_constraintStart_toEndOf="@+id/imageview_3"
                android:text="@string/no_spaces"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                android:textAppearance="@style/TextRegular"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sign_in"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_warning"
            android:layout_marginTop="30dp"
            android:text="@string/signup"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_sign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/steel"
            android:textAppearance="@style/TextMedium"
            app:layout_constraintTop_toBottomOf="@id/button_sign_in"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/sign_up_login"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.registration.RegistrationViewModel" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/mainBackgroundColor">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_welcome_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/hello"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textAppearance="@style/TextSemibold"
            android:textColor="@color/darkNavyBlue"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_welcome_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_title"
            android:text="@string/signup_text"
            android:textSize="16sp"
            android:textAppearance="@style/TextRegular"
            android:textColor="@color/steel"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_hint"
            android:layout_marginTop="20dp"
            android:text="@string/name"
            android:textSize="12sp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="seda"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"
            android:background="@drawable/background_edittext"
            app:layout_constraintTop_toBottomOf="@+id/textview_name"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edittext_name"
            android:layout_marginTop="20dp"
            android:text="@string/surname"
            android:textSize="12sp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:text="aytekin"
            android:padding="15dp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"
            android:background="@drawable/background_edittext"
            app:layout_constraintTop_toBottomOf="@+id/textview_surname"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edittext_surname"
            android:layout_marginTop="20dp"
            android:text="@string/e_mail"
            android:textSize="12sp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_email"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textview_mail"
            app:errorEnabled="true">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edittext_mail"
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:text="seda.aytekin@vektortelekom.com"
                    android:textAppearance="@style/TextMedium"
                    android:textColor="@color/steel"
                    android:background="@drawable/background_edittext"
                    android:layout_height="wrap_content"
                    />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_email"
            android:layout_marginTop="20dp"
            android:text="@string/password"
            android:textSize="12sp"
            android:textAppearance="@style/TextMedium"
            android:textColor="@color/steel"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_password"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/textview_password">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Aa123456"
                android:textColor="@color/steel"
                android:inputType="textPassword"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_lines"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/line1"
                android:layout_width="87dp"
                android:layout_height="6dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorIceBlue"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/line2"
                android:layout_width="87dp"
                android:layout_height="6dp"
                android:layout_marginStart="7dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorIceBlue"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/line3"
                android:layout_width="87dp"
                android:layout_height="6dp"
                android:layout_marginStart="7dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorIceBlue"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/line4"
                android:layout_width="87dp"
                android:layout_height="6dp"
                android:layout_marginStart="7dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorIceBlue"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_lines"
            android:background="@drawable/temp"
            app:strokeColor="@color/transparent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_must_include"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/darkNavyBlue"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageview_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_check_icon_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_warning1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/least_character"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/darkNavyBlue"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageview_1"
                    app:layout_constraintTop_toBottomOf="@+id/textview_title" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageview_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_check_icon_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_warning1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_warning2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/least_character_capital"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/darkNavyBlue"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageview_2"
                    app:layout_constraintTop_toBottomOf="@+id/textview_warning1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageview_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_check_icon_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_warning2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_warning3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/least_character_small"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/darkNavyBlue"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageview_2"
                    app:layout_constraintTop_toBottomOf="@+id/textview_warning2" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageview_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_check_icon_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_warning3" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_warning4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/least_character_digit"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/darkNavyBlue"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageview_3"
                    app:layout_constraintTop_toBottomOf="@+id/textview_warning3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.menu.MenuViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/paleGrey"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            tools:ignore="KeyboardInaccessibleWidget">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="20dp"
                    app:rippleColor="@color/colorPrimary"
                    app:cardElevation="0dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_view_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_document_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="@style/TextMedium"
                            android:textSize="12sp"
                            android:textColor="@color/colorWhite"
                            tools:text="Approved" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/text_view_driving_license_number_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driving_license_no"
                            android:textColor="@color/darkNavyBlue"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="12sp"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/text_view_driving_license_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:paddingBottom="1dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_number_info"
                             />

                        <TextView
                            android:id="@+id/text_view_driving_license_expire_date_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:inputType="textMultiLine"
                            android:text="@string/driving_license_expiration_date"
                            android:textColor="@color/darkNavyBlue"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_number"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/text_view_driving_license_expire_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:paddingBottom="1dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_expire_date_info"
                            />

                        <TextView
                            android:id="@+id/text_view_driving_license_given_date_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:inputType="textMultiLine"
                            android:text="@string/driving_license_give_date"
                            android:textColor="@color/darkNavyBlue"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/text_view_driving_license_expire_date_info"
                            app:layout_constraintTop_toTopOf="@id/text_view_driving_license_expire_date_info" />


                        <TextView
                            android:id="@+id/text_view_driving_license_given_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingBottom="3dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"

                            app:layout_constraintStart_toStartOf="@+id/text_view_driving_license_given_date_info"
                            app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_given_date_info"
                            />

                        <View
                            android:id="@+id/view_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_driving_license_given_date"
                            android:layout_marginTop="30dp"
                            android:background="@color/paleGrey2" />

                        <TextView
                            android:id="@+id/text_view_licence_front_photo_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driving_license_front_photo"
                            android:textColor="@color/darkNavyBlue"
                            android:layout_marginTop="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/view_divider" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/image_driving_licence_front"
                            android:layout_width="match_parent"
                            android:layout_height="176dp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_licence_front_photo_title"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/colorBlack"
                            app:cardElevation="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_licence_front"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/text_view_licence_rear_photo_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driving_license_rear_photo"
                            android:textColor="@color/darkNavyBlue"
                            android:layout_marginTop="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/image_driving_licence_front" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/image_driving_licence_rear"
                            android:layout_width="match_parent"
                            android:layout_height="176dp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_licence_rear_photo_title"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/colorBlack"
                            app:cardElevation="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_licence_rear"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>

                        </com.google.android.material.card.MaterialCardView>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/PrimaryButton"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            app:cornerRadius="4dp"
            android:textSize="14sp"
            android:text="@string/update" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

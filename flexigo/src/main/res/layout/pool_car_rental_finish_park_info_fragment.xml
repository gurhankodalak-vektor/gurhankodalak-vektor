<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.PoolCarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pool_car_rental_finish_park_info_fragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/wizard_navigation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/left_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="34dp"
                        android:background="@drawable/wizard_circle_selected"
                        app:layout_constraintEnd_toStartOf="@id/mid_line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:lineSpacingExtra="2sp"
                        android:textAppearance="@style/TextRegular"
                        android:textColor="@color/purpley"
                        android:textSize="12sp"
                        android:text="@string/control"
                        app:layout_constraintEnd_toEndOf="@id/left_icon"
                        app:layout_constraintStart_toStartOf="@id/left_icon"
                        app:layout_constraintTop_toBottomOf="@id/left_icon" />

                    <FrameLayout
                        android:id="@+id/mid_line"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/purpley"
                        app:layout_constraintBottom_toBottomOf="@id/right_icon"
                        app:layout_constraintEnd_toStartOf="@id/right_icon"
                        app:layout_constraintStart_toEndOf="@id/left_icon"
                        app:layout_constraintTop_toTopOf="@id/right_icon" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/right_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="34dp"
                        android:layout_marginEnd="80dp"
                        android:background="@drawable/wizard_circle_unselected"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/mid_line"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/right_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:textAppearance="@style/TextRegular"
                        android:textColor="@color/steel"
                        android:textSize="12sp"
                        android:text="@string/park_info"
                        app:layout_constraintEnd_toEndOf="@id/right_icon"
                        app:layout_constraintStart_toStartOf="@id/right_icon"
                        app:layout_constraintTop_toBottomOf="@id/right_icon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/wizard_navigation2"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textAppearance="@style/TextSemibold"
                            android:textSize="18sp"
                            android:textColor="@color/darkNavyBlue"
                            android:text="@string/rental_finish_park_info_title"/>

                        <View
                            android:id="@+id/view_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_title"
                            android:background="@color/paleGrey2"/>

                        <LinearLayout
                            android:id="@+id/layout_photo"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:layout_constraintTop_toBottomOf="@id/view_divider"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card_view_add_photo"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="10dp"
                                app:cardBackgroundColor="@color/colorWhite"
                                app:strokeColor="@color/paleGrey2"
                                app:strokeWidth="1dp"
                                app:rippleColor="@color/paleGrey2"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="10dp"
                                app:contentPadding="10dp"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_gravity="center">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="8dp"
                                        android:src="@drawable/ic_add_photo"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/TextRegular"
                                        android:textSize="12sp"
                                        android:textColor="@color/steel"
                                        android:text="@string/add_photo"/>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_taken_photo"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:visibility="gone">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:cardElevation="0dp"
                                    app:cardCornerRadius="10dp" >

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/image_view_park_photo"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:scaleType="centerCrop"/>

                                </com.google.android.material.card.MaterialCardView>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_delete_park_photo"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_close"
                                    android:background="@drawable/bg_color_black_rounded_10dp"
                                    android:tint="@color/steel" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>



                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_explanation_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/layout_photo"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textAppearance="@style/TextRegular"
                            android:textSize="14sp"
                            android:textColor="@color/darkNavyBlue"
                            android:text="@string/explanation"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_description_park_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/text_view_explanation_info"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:hint="@string/explanation_hint"
                            android:minLines="3"
                            android:maxLines="3"
                            android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"
                            android:text="@={viewModel.finishParkInfoDescription}"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/check_box_confirm_park_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/edit_text_description_park_info"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="10dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:button="@drawable/ic_circular_check_box"
                            app:buttonTint="@android:color/transparent"
                            android:buttonTintMode="add"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            tools:checked="true"
                            android:text="@string/final_checks_confirm"
                            android:checked="@={viewModel.isFinishParkInfoConfirmChecked}"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>



                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorWhite">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_finish_rental_park_info"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:text="@string/button_finish_rent"
                app:backgroundTint="@color/purpley"
                app:rippleColor="@color/colorWhite"
                android:onClick="@{viewModel::finishRentalControl}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
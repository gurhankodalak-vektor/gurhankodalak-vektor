<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="right"
        app:layout_constraintTop_toTopOf="parent"
        app:mode="same_level">

        <!-- Your secondary layout here -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/image_button_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/steel"
                    android:padding="20dp"
                    android:src="@drawable/ic_dislike" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>

        <!-- Your main layout here -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:rippleColor="@color/steel"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="17dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/textview_time"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        tools:text="Michael T."
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"
                        android:textSize="16sp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageview_carpool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_carpool"
                        app:layout_constraintTop_toTopOf="@id/text_view_title"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_title"
                        app:layout_constraintEnd_toStartOf="@+id/textview_time"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_title"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_title"
                        app:layout_constraintStart_toEndOf="@id/text_view_title"
                        android:textAppearance="@style/TextMedium"
                        android:textColor="@color/steel"
                        android:textSize="12sp"
                        tools:text="0.6 mi, +5 min"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_title"
                        android:layout_marginTop="15dp"
                        tools:text="Marketing"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/steel"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview_departure_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/textview_occupation"
                        android:layout_marginTop="5dp"
                        tools:text="07:30-17:30"
                        android:textAppearance="@style/TextMedium"
                        android:textSize="14sp"
                        android:textColor="@color/steel"/>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>


    </com.chauthai.swipereveallayout.SwipeRevealLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
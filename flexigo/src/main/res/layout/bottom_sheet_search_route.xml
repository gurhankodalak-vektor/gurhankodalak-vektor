<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.shuttle.ShuttleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_search_route"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_white_rounded_top_20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bottom_sheet_search_route_image_view_close"
            android:layout_width="40dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/image_view_from_to"
            app:layout_constraintBottom_toBottomOf="@id/image_view_from_to"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_arrow_right_1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:rotation="180"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_from_to"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,1:1"
            app:layout_constraintStart_toEndOf="@id/bottom_sheet_search_route_image_view_close"
            app:layout_constraintTop_toTopOf="@+id/text_view_from_to"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_to"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_from_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_from_to"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="6dp"
            android:textAppearance="@style/TextSemibold"
            android:textSize="14sp"
            android:textColor="@color/marigold"
            android:text="@string/search_shuttle"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_route_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_view_from_to"
            app:layout_constraintStart_toStartOf="@id/image_view_from_to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_edit_text_bottom"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextRegular"
            android:textSize="16sp"
            android:textColor="@color/darkNavyBlue"
            android:background="@null"
            android:textColorHint="@color/steel"
            android:hint="@string/shuttle_name"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionDone"
            />

        <View
            android:id="@+id/view_edit_text_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/edit_text_route_search"
            android:layout_marginTop="13dp"
            android:background="@color/paleGrey2"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_search_results"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_edit_text_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="10dp"
            app:rippleColor="@color/colorPrimary"
            app:cardElevation="0dp"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_search_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
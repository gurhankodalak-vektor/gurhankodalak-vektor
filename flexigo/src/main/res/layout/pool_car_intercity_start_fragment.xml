<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.intercity.PoolCarIntercityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_submit">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_submit"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:rippleColor="@color/colorWhite"
                app:contentPadding="20dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_license_plate_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/pool_car_intercity_start_text_plate"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_license_plate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_license_plate_info"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="@string/hint_plate"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:text="@={viewModel.licensePlate}"
                        android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_start_km_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/edit_text_license_plate"
                        android:layout_marginTop="15dp"
                        android:text="@string/pool_car_intercity_start_text_start_km"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_start_km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_start_km_info"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="@string/hint_start_km"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"
                        android:text="@={viewModel.startKm}"
                        android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_vehicle_make_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/edit_text_start_km"
                        android:layout_marginTop="15dp"
                        android:text="@string/pool_car_intercity_start_text_make"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_vehicle_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_vehicle_make_info"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="@string/hint_make"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:text="@={viewModel.vehicleMake}"
                        android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_vehicle_model_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/edit_text_vehicle_make"
                        android:layout_marginTop="15dp"
                        android:text="@string/pool_car_intercity_start_text_model"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextSemibold"
                        android:textColor="@color/darkNavyBlue"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_vehicle_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_vehicle_model_info"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="@string/hint_model"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:text="@={viewModel.vehicleModel}"
                        android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:text="@string/Generic_Continue_2"
            app:backgroundTint="@color/purpley"
            app:rippleColor="@color/colorWhite"
            android:onClick="@{viewModel::startRental}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
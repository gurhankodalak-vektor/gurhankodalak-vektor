<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="pastUseModel"
            type="com.vektortelekom.android.vservice.data.model.PastUseModel" />

        <variable
            name="viewHolder"
            type="com.vektortelekom.android.vservice.ui.pastuses.adapter.PastUsesListAdapter.ViewHolder" />

    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:pastUseTypeBackground="@{pastUseModel.type}">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textAppearance="@style/TextMedium"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    app:pastUseTypeText="@{pastUseModel.type}"
                    tools:text="POOLCAR" />


            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/view_divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/card_view_status"
                android:layout_marginTop="10dp"
                android:background="@color/paleGrey2"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_divider_1"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextRegular"
                android:textSize="14sp"
                android:textColor="@color/steel"
                android:text="@string/past_use_item_date"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_date_info"
                android:layout_marginTop="1dp"
                android:textAppearance="@style/TextSemibold"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@{pastUseModel.date}"
                tools:text="12.11.2019 - 6:41pm"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_duration_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_date"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextRegular"
                android:textSize="14sp"
                android:textColor="@color/steel"
                android:text="@string/past_use_item_duration"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_duration_info"
                android:layout_marginTop="1dp"
                android:textAppearance="@style/TextSemibold"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@{String.format(@string/minutes_count, pastUseModel.duration)}"
                tools:text="Some Description Test"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_start_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_duration"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextRegular"
                android:textSize="14sp"
                android:textColor="@color/steel"
                android:text="@string/past_use_item_start_loation"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_start_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_start_location_info"
                android:layout_marginTop="1dp"
                android:textAppearance="@style/TextSemibold"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@{pastUseModel.startLocation.address}"
                tools:text="12.11.2019 10:00am - 02:00pm"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_end_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_start_location"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextRegular"
                android:textSize="14sp"
                android:textColor="@color/steel"
                android:text="@string/past_use_item_end_location"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_end_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_end_location_info"
                android:layout_marginTop="1dp"
                android:textAppearance="@style/TextSemibold"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                android:text="@{pastUseModel.endLocation.address}"
                tools:text="12.11.2019 10:00am - 02:00pm"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.taxi.TaxiViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:contentPadding="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_date_of_driving"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAppearance="@style/TextSemibold"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/date_and_time_of_driving"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_demand_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_date_of_driving"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/paleGrey"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:rippleColor="@color/colorWhite">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card_view_date_calendar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintDimensionRatio="H,1:1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:cardBackgroundColor="@color/colorWhite"
                                app:cardCornerRadius="3dp"
                                android:layout_margin="5dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/text_view_date_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/TextSemibold"
                                        android:textSize="10sp"
                                        android:textColor="@color/marigold"
                                        tools:ignore="SmallSp"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/text_view_date_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/TextSemibold"
                                        android:textSize="16sp"
                                        android:textColor="@color/darkNavyBlue"/>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_date_full_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/card_view_date_calendar"
                                app:layout_constraintEnd_toStartOf="@id/image_view_date_arrow"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:textAppearance="@style/TextSemibold"
                                android:textSize="14sp"
                                android:textColor="@color/darkNavyBlue"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_date_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_expand"
                                android:rotation="-90"/>



                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_start_and_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/card_view_demand_date"
                        android:layout_marginTop="15dp"
                        android:textAppearance="@style/TextSemibold"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/start_and_end_point"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_start_finish_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_start_and_end_date"
                        android:layout_marginTop="15dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/paleGrey2"
                        app:rippleColor="@color/colorWhite"
                        app:cardElevation="0dp"
                        android:onClick="@{viewModel.navigator::showStartStartLocationFragment}">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="20dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_from"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    app:layout_constraintDimensionRatio="W,1:1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="@id/text_view_from_info"
                                    android:src="@drawable/ic_from"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/text_view_from_info"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/image_view_from"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="6dp"
                                    android:textAppearance="@style/TextSemibold"
                                    android:textSize="14sp"
                                    android:textColor="@color/purpley"
                                    android:text="@string/start"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/text_view_from"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/text_view_from_info"
                                    app:layout_constraintStart_toStartOf="@id/text_view_from_info"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="1dp"
                                    android:textAppearance="@style/TextRegular"
                                    android:textSize="16sp"
                                    android:textColor="@color/darkNavyBlue"
                                    android:hint="@string/search_address"
                                    android:text="@={viewModel.startLocationTextStart}"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <!--

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/layout_from"
                                android:onClick="@{viewModel.navigator::showStartEndLocationFragment}">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    app:layout_constraintDimensionRatio="W,1:1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/text_view_to_info"
                                    app:layout_constraintBottom_toBottomOf="@id/text_view_to_info"
                                    android:src="@drawable/ic_to"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/text_view_to_info"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/image_view_to"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginStart="6dp"
                                    android:textAppearance="@style/TextSemibold"
                                    android:textSize="14sp"
                                    android:textColor="@color/marigold"
                                    android:text="@string/finish"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/text_view_to"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/text_view_to_info"
                                    app:layout_constraintStart_toStartOf="@id/text_view_to_info"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="1dp"
                                    android:textAppearance="@style/TextRegular"
                                    android:textSize="16sp"
                                    android:textColor="@color/darkNavyBlue"
                                    android:hint="@string/search_address"
                                    android:text="@={viewModel.endLocationTextStart}"/>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            -->


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorWhite">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_report"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_cancel"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:text="@string/live_taxi_usage_button_start"
                app:backgroundTint="@color/marigold"
                app:rippleColor="@color/colorWhite"
                android:onClick="@{viewModel::startTaxiUsage}"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:text="@string/cancel"
                app:backgroundTint="@color/colorWhite"
                app:strokeWidth="1dp"
                app:strokeColor="@color/paleGrey2"
                android:textColor="@color/steel"
                app:cornerRadius="10dp"
                app:rippleColor="@color/paleGrey2"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.shuttle.ShuttleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            app:tint="@color/colorPrimary"
            app:rippleColor="@color/colorPrimary"
            android:background="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:src="@drawable/ic_my_location"
            android:visibility="gone"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:rippleColor="@color/colorWhite"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:onClick="@{viewModel.navigator::showRouteSearchFromFragment}">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_view_from"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="W,1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_from_info"
                        android:src="@drawable/ic_from"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_from_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_view_from"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="6dp"
                        android:textAppearance="@style/TextSemibold"
                        android:textSize="14sp"
                        android:textColor="@color/purpley"
                        android:text="@string/from"/>

                    <TextView
                        android:id="@+id/text_view_from"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_from_info"
                        app:layout_constraintStart_toStartOf="@id/text_view_from_info"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="1dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="16sp"
                        android:textColor="@color/darkNavyBlue"
                        android:hint="@string/search_address"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/layout_from"
                    android:onClick="@{viewModel.navigator::showRouteSearchToFragment}">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_view_to"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="W,1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_to_info"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_to_info"
                        android:src="@drawable/ic_to"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_to_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_view_to"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="6dp"
                        android:textAppearance="@style/TextSemibold"
                        android:textSize="14sp"
                        android:textColor="@color/marigold"
                        android:text="@string/to"/>

                    <TextView
                        android:id="@+id/text_view_to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_view_to_info"
                        app:layout_constraintStart_toStartOf="@id/text_view_to_info"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="1dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="16sp"
                        android:textColor="@color/darkNavyBlue"
                        android:hint="@string/search_address"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_sheet_stop_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                app:behavior_hideable="true"
                app:behavior_peekHeight="0dp"
                android:background="@drawable/bg_white_rounded_top_20dp">

                <View
                    android:id="@+id/view_bottom_head"
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:background="@drawable/bg_steel_rounded_2_5dp_alpha_50"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_bottom_head"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextSemibold"
                    android:textColor="@color/darkNavyBlue"
                    android:textSize="18sp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_view_station_details_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_station_name"
                    android:layout_marginTop="13dp"
                    android:visibility="gone">

                    <View
                        android:id="@+id/view_line_top"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/paleGrey2"/>

                    <HorizontalScrollView
                        android:id="@+id/horizontal_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/view_line_top"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_station_detail_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginStart="21dp"
                                android:textAppearance="@style/TextSemibold"
                                android:textColor="@color/darkNavyBlue"
                                android:textSize="14sp"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_station_seat_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/text_view_station_detail_2"
                                android:layout_marginStart="11dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginBottom="13dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/bg_color_primary_rounded_12dp"
                                android:textAppearance="@style/TextRegular"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_station_time_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/text_view_station_seat_2"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginBottom="13dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/bg_pale_grey_2_rounded_stroke_12dp"
                                android:textAppearance="@style/TextRegular"
                                android:textColor="@color/darkNavyBlue"
                                android:textSize="12sp"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_station_arrival_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/text_view_station_time_2"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginBottom="13dp"
                                android:layout_marginEnd="20dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/bg_pale_grey_2_rounded_stroke_12dp"
                                android:textAppearance="@style/TextRegular"
                                android:textColor="@color/darkNavyBlue"
                                android:textSize="12sp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </HorizontalScrollView>

                    <View
                        android:id="@+id/view_line_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/horizontal_layout"

                        android:background="@color/paleGrey2"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_station_details_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/view_line_bottom"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:id="@+id/layout_directions"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/layout_station_use"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_horizontal"
                            app:layout_constraintHorizontal_chainStyle="spread">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_directions"
                                android:background="@drawable/bg_marigold_circular"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/directions"
                                android:textAppearance="@style/TextMedium"
                                android:textSize="12sp"
                                android:textColor="@color/steel"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_station_use"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/layout_directions"
                            app:layout_constraintEnd_toStartOf="@id/layout_call"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_horizontal">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_station_use"
                                android:background="@drawable/bg_purpley_circular"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/station_use"
                                android:textAppearance="@style/TextMedium"
                                android:textSize="12sp"
                                android:textColor="@color/steel"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_call"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/layout_station_use"
                            app:layout_constraintEnd_toStartOf="@id/layout_booking"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_horizontal">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_shuttle_driver_call"
                                android:background="@drawable/bg_color_primary_circular"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/call"
                                android:textAppearance="@style/TextMedium"
                                android:textSize="12sp"
                                android:textColor="@color/steel"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_booking"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/layout_call"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_horizontal">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_booking"
                                android:background="@drawable/bg_bright_blue_circular"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/booking"
                                android:textAppearance="@style/TextMedium"
                                android:textSize="12sp"
                                android:textColor="@color/steel"/>


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_station_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_station_name"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/paleGrey2"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardElevation="0dp"
                    app:rippleColor="@color/colorPrimary">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_station_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_station_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="18dp"
                            android:layout_marginStart="21dp"
                            android:textAppearance="@style/TextSemibold"
                            android:textColor="@color/darkNavyBlue"
                            android:textSize="14sp"/>

                        <View
                            android:id="@+id/view_station_detail_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_station_detail"
                            android:layout_marginTop="15dp"
                            android:background="@color/paleGrey2"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_station_details_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/view_station_detail_divider"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="10dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_station_seat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/text_view_station_time"
                                android:layout_marginStart="11dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/bg_color_primary_rounded_12dp"
                                android:textAppearance="@style/TextRegular"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"/>
                            
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_station_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/text_view_station_seat"
                                app:layout_constraintEnd_toStartOf="@id/text_view_station_arrival"
                                android:layout_marginStart="10dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/bg_pale_grey_2_rounded_stroke_12dp"
                                android:textAppearance="@style/TextRegular"
                                android:textColor="@color/darkNavyBlue"
                                android:textSize="12sp"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/text_view_station_arrival"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/text_view_station_time"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginStart="10dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/bg_pale_grey_2_rounded_stroke_12dp"
                                android:textAppearance="@style/TextRegular"
                                android:textColor="@color/darkNavyBlue"
                                android:textSize="12sp"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:id="@+id/view_margin2"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            app:layout_constraintTop_toBottomOf="@id/layout_station_details_bottom"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:id="@+id/view_margin"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@id/card_view_station_details"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/number_picker"
                android:background="@color/paleGrey3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_cancel"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textColor="@color/watermelon"
                    android:textAppearance="@style/TextRegular"
                    android:text="@string/cancel"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_select"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextRegular"
                    android:text="@string/select"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_select_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:textAppearance="@style/TextRegular"
                    android:textColor="@color/darkNavyBlue"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:descendantFocusability="blocksDescendants"
                android:background="@color/paleGrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_marker_tutorial"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

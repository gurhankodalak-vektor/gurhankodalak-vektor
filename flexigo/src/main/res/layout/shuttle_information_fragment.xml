<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.shuttle.ShuttleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_day_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorWhite">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_day_prev"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                android:src="@drawable/ic_arrow_right_1"
                android:backgroundTint="@color/colorWhite"
                android:rotation="180"
                android:visibility="invisible"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_time_interval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/button_day_prev"
                app:layout_constraintEnd_toStartOf="@id/button_day_next"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:textAppearance="@style/TextRegular"
                android:textSize="14sp"
                android:textColor="@color/darkNavyBlue"
                tools:text="Cumartesi, 30 May - Pazar, 14 Haz"
                android:gravity="center"/>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_day_next"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                android:src="@drawable/ic_arrow_right_1"
                android:backgroundTint="@color/colorWhite"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_day_list_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/paleGrey">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="14dp"
                    android:textAppearance="@style/TextRegular"
                    android:textSize="14sp"
                    android:textColor="@color/darkNavyBlue"
                    android:text="@string/shuttle_information_text"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_information"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp">

                        <LinearLayout
                            android:id="@+id/layout_morning_evening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:gravity="end">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="@style/TextSemibold"
                                android:textSize="12sp"
                                android:textColor="@color/steel"
                                android:text="@string/morning"
                                android:gravity="center"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="@style/TextSemibold"
                                android:textSize="12sp"
                                android:textColor="@color/steel"
                                android:text="@string/evening"
                                android:gravity="center"/>

                            <!--
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="@style/TextSemibold"
                                android:textSize="12sp"
                                android:textColor="@color/steel"
                                android:text="@string/overtime"
                                android:gravity="center"/>
                                -->

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_shuttle_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/layout_morning_evening"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="7dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/shuttle_information_view_holder_item"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_workgroup_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Santa Monica Overtime"
        android:textAppearance="@style/TextSemibold"
        android:textColor="@color/darkNavyBlue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_workgroup_from_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextRegular"
        android:textColor="@color/darkNavyBlue"
        android:textSize="14sp"
        android:singleLine="false"
        tools:text="Santa Monica - Shuttle Stops"
        app:layout_constraintEnd_toStartOf="@+id/imageview_clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_workgroup_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_clock"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintTop_toTopOf="@+id/textview_workgroup_from_to"
        app:layout_constraintBottom_toBottomOf="@+id/textview_workgroup_from_to"
        app:layout_constraintEnd_toStartOf="@+id/text_view_time"
        app:layout_constraintTop_toBottomOf="@id/textview_workgroup_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextSemibold"
        android:textColor="@color/darkNavyBlue"
        android:textSize="12sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/arrow_right"
        app:layout_constraintTop_toTopOf="@+id/textview_workgroup_from_to"
        app:layout_constraintBottom_toBottomOf="@+id/textview_workgroup_from_to"
        app:layout_constraintTop_toBottomOf="@id/textview_workgroup_name"
        tools:text="14:30 - 18:00" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow_right"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@+id/textview_workgroup_from_to"
        app:layout_constraintBottom_toBottomOf="@+id/textview_workgroup_from_to"
        app:layout_constraintTop_toBottomOf="@id/textview_workgroup_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/steel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_hour_glass"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_hour_glass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_workgroup_from_to" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_closest_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextRegular"
        android:textColor="@color/steel"
        android:textSize="12sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageview_hour_glass"
        app:layout_constraintTop_toBottomOf="@+id/textview_workgroup_from_to"
        app:layout_constraintTop_toTopOf="@+id/imageview_hour_glass"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_hour_glass"
        tools:text="Earliest reservation closes in 3 h 42 min" />

</androidx.constraintlayout.widget.ConstraintLayout>

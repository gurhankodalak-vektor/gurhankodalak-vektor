<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_workgroup_instance_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/text_view_time"
        android:text="Maslak - SamandÄ±ra"
        android:textAppearance="@style/TextSemibold"
        android:textColor="@color/darkNavyBlue"
        android:textSize="14sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/arrow_right"
        android:text="07:30 - 16.45"
        android:textAppearance="@style/TextRegular"
        android:textColor="@color/darkNavyBlue"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/ic_arrow_right_1"
        android:layout_alignParentEnd="true"
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_plate"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/text_view_workgroup_instance_name"
        app:layout_constraintTop_toBottomOf="@id/text_view_workgroup_instance_name"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textAppearance="@style/TextRegular"
        android:textColor="@color/darkNavyBlue"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_plate"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:background="@color/paleGrey2"/>

</RelativeLayout>
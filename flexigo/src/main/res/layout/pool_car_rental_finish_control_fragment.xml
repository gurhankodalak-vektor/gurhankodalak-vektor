<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.poolcar.PoolCarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pool_car_rental_finish_control_fragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/wizard_navigation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/left_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="34dp"
                        android:background="@drawable/wizard_circle_selected"
                        app:layout_constraintEnd_toStartOf="@id/mid_line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:lineSpacingExtra="2sp"
                        android:textAppearance="@style/TextRegular"
                        android:textColor="@color/purpley"
                        android:textSize="12sp"
                        android:text="@string/control"
                        app:layout_constraintEnd_toEndOf="@id/left_icon"
                        app:layout_constraintStart_toStartOf="@id/left_icon"
                        app:layout_constraintTop_toBottomOf="@id/left_icon" />

                    <FrameLayout
                        android:id="@+id/mid_line"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/steel"
                        app:layout_constraintBottom_toBottomOf="@id/right_icon"
                        app:layout_constraintEnd_toStartOf="@id/right_icon"
                        app:layout_constraintStart_toEndOf="@id/left_icon"
                        app:layout_constraintTop_toTopOf="@id/right_icon" />


                    <ImageView
                        android:id="@+id/right_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="34dp"
                        android:layout_marginEnd="80dp"
                        android:background="@drawable/wizard_circle_unselected"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/mid_line"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/right_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:textAppearance="@style/TextRegular"
                        android:textColor="@color/steel"
                        android:textSize="12sp"
                        android:text="@string/park_info"
                        app:layout_constraintEnd_toEndOf="@id/right_icon"
                        app:layout_constraintStart_toStartOf="@id/right_icon"
                        app:layout_constraintTop_toBottomOf="@id/right_icon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/wizard_navigation2"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_view_final_checks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp"
                            android:textAppearance="@style/TextSemibold"
                            android:textSize="18sp"
                            android:textColor="@color/darkNavyBlue"
                            android:text="@string/final_checks"/>

                        <View
                            android:id="@+id/view_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_final_checks"
                            android:background="@color/paleGrey2"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/check_box_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/view_divider"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="18dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:button="@drawable/ic_circular_check_box"
                            app:buttonTint="@android:color/transparent"
                            android:buttonTintMode="add"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            tools:checked="true"
                            android:text="@string/final_checks_1"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/check_box_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/check_box_1"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:button="@drawable/ic_circular_check_box"
                            app:buttonTint="@android:color/transparent"
                            android:buttonTintMode="add"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            tools:checked="true"
                            android:text="@string/final_checks_2"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/check_box_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/check_box_2"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:button="@drawable/ic_circular_check_box"
                            app:buttonTint="@android:color/transparent"
                            android:buttonTintMode="add"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            tools:checked="true"
                            android:text="@string/final_checks_3"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/check_box_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/check_box_3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="10dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:button="@drawable/ic_circular_check_box"
                            app:buttonTint="@android:color/transparent"
                            android:buttonTintMode="add"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            tools:checked="true"
                            android:text="@string/final_checks_confirm"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorWhite">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_continue"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_report_new_damage"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:text="@string/Generic_Continue_2"
                app:backgroundTint="@color/button_enable_disable_purpley"
                app:rippleColor="@color/colorWhite"
                android:onClick="@{viewModel.navigator::showPoolCarRentalFinishParkInfoFragment}"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_report_new_damage"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:text="@string/report_new_damage"
                app:backgroundTint="@color/colorWhite"
                app:strokeWidth="1dp"
                app:strokeColor="@color/purpley"
                android:textColor="@color/purpley"
                app:cornerRadius="10dp"
                app:rippleColor="@color/purpley"
                android:onClick="@{viewModel.navigator::showPoolCarAddNewDamageFragment}"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

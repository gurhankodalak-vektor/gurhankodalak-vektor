<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.vektortelekom.android.vservice.ui.flexiride.FlexirideViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flexiride_survey_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget"
        android:background="@color/paleGrey">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp"
                app:contentPadding="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAppearance="@style/TextSemibold"
                        android:textSize="18sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/satisfaction_main_title"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        android:layout_marginTop="10dp"
                        android:textAppearance="@style/TextRegular"
                        android:textSize="14sp"
                        android:textColor="@color/steel"
                        android:text="@string/satisfaction_main_info"/>

                    <TextView
                        android:id="@+id/first_rating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/satisfaction_title_1"
                        android:textAppearance="@style/TextSemibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/info"
                        android:layout_marginTop="32dp" />

                    <LinearLayout
                        android:id="@+id/first_rating_stars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        android:minHeight="50dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/first_rating_title">

                        <ImageView
                            android:id="@+id/img_1_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_1_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_1_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_1_4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_1_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/second_rating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/satisfaction_title_2"
                        android:textAppearance="@style/TextSemibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/first_rating_stars"
                        android:layout_marginTop="32dp" />

                    <LinearLayout
                        android:id="@+id/second_rating_stars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        android:minHeight="50dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/second_rating_title">

                        <ImageView
                            android:id="@+id/img_2_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_2_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_2_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_2_4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_2_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/third_rating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/satisfaction_title_3"
                        android:textAppearance="@style/TextSemibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/second_rating_stars"
                        android:layout_marginTop="32dp" />

                    <LinearLayout
                        android:id="@+id/third_rating_stars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        android:minHeight="50dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/third_rating_title">

                        <ImageView
                            android:id="@+id/img_3_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_3_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_3_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_3_4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                        <ImageView
                            android:id="@+id/img_3_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_star_unselected">
                        </ImageView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/notes_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkNavyBlue"
                        android:text="@string/description"
                        android:textAppearance="@style/TextSemibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/third_rating_stars"
                        android:layout_marginTop="30dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/notes_title"
                        android:layout_marginTop="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:hint="@string/satisfaction_description_hint"
                        android:minLines="3"
                        android:maxLines="3"
                        android:background="@drawable/bg_pale_grey_two_border_rounded_4dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/colorWhite">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_submit_pool_car_satisfaction_survey"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:textAppearance="@style/TextSemibold"
                android:textSize="16sp"
                android:text="@string/submit"
                app:backgroundTint="@color/purpley"
                android:textColor="@color/colorWhite"
                app:cornerRadius="10dp"
                app:rippleColor="@color/colorWhite"
                android:minHeight="50dp"
                android:onClick="@{viewModel.navigator::finishSurvey}"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>